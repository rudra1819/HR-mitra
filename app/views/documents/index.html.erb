<div class="container mt-5">
  <div class="col-lg-12">
    <div class="card rounded-0 shadow-sm mb-4">
      <div class="card-body">
        <h2 class="text-center text-secondary">Listing Documents</h2>
      </div>
    </div>

    <%= render "shared/links" %>

    <div class="table-responsive">
      <table class="table table-bordered table-striped table-hover">
        <thead class="table-dark">
          <tr>
            <th>Document Name</th>
            <th>Document Type</th>
            <th>Employee ID</th>
            <th>Employee Name</th>
            <th>Action</th>
          </tr>
        </thead>

        <tbody>
          <% @documents.each do |document| %>
            <tr>
              <td><%= document.name %></td>
              <td><%= document.doc_type %></td>
              <td><%= document.employee_id %></td>
              <td><%= document.employee.first_name %></td>
              
              <td>
                <div class="btn-group">
                  <button type="button" class="btn btn-danger dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                    Action
                  </button>
                  <ul class="dropdown-menu">
                    <li><%= link_to "Edit Document", edit_document_path(document), class: "dropdown-item" %></li>
                    <li><%= link_to "View Document", document_path(document), class: "dropdown-item" %></li>
                    <li>
                      <%= button_to 'Delete', document_path(document), method: :delete, data: { confirm: "Are you sure you want to delete this document?" }, class: "dropdown-item text-danger" %>
                    </li>
                  </ul>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="text-center mt-4">
      <%= button_to "New Document", new_document_path, method: :get, class: "btn btn-success border-0 rounded-pill shadow p-2 px-4" %>
    </div>
  </div>
</div>
