<div class="container mt-5">
  <div class="card shadow-lg p-4 rounded">
    <h1 class="text-center text-primary mb-4">Edit Document</h1>

    <% if @document.errors.any? %>
      <div class="alert alert-danger">
        <h5 class="text-danger">Fix the following errors:</h5>
        <ul>
          <% @document.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_for(@document) do |f| %>
      <div class="row">
        <div class="col-md-12">
          <div class="form-group mb-3">
            <%= f.label :name, "Document Name", class: "form-label" %>
            <%= f.text_field :name, class: 'form-control', required: true %>
          </div>

          <div class="form-group mb-3">
            <%= f.label :doc_type, "Document Type", class: "form-label" %>
            <%= f.text_field :doc_type, class: 'form-control' %>
          </div>

          <div class="form-group mb-3">
            <%= f.label :file, "Upload File", class: "form-label" %>
            <%= f.file_field :file, class: 'form-control' %>
          </div>

          <div class="form-group mb-3">
            <%= f.label :employee_id, "Employee", class: "form-label" %>
            <%= f.collection_select :employee_id, Employee.all, :id, :first_name, { prompt: 'Select Employee' }, { class: 'form-control', required: true } %>
          </div>
        </div>
      </div>

      <div class="d-flex justify-content-center gap-3 mt-4">
        <%= f.submit 'Update Document', class: 'btn btn-primary' %>
        <%= link_to 'Back', document_path(@document), class: 'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
</div>

