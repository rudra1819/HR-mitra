<div class="container mt-5">
  <!-- Header -->
  <div class="card rounded-3 shadow-sm mb-4 border-0">
    <div class="card-body text-center">
      <h1 class="fw-bold text-secondary mb-2">Contact Us</h1>
      <p class="text-muted mb-0">We’d love to hear from you! Send us a message and we’ll get back to you soon.</p>
    </div>
  </div>

  <!-- Shared Links -->
  <%= render "shared/links" %>

  <!-- Contact Form Card -->
  <div class="card shadow-sm rounded-3 p-4 mb-5">
    <%= form_with url: contact_us_path, method: :post, local: true do |f| %>

      <div class="mb-3">
        <%= f.label :name, "Full Name", class: "form-label fw-semibold" %>
        <%= f.text_field :name, class: "form-control", placeholder: "Enter your full name", required: true %>
      </div>

      <div class="mb-3">
        <%= f.label :email, "Email Address", class: "form-label fw-semibold" %>
        <%= f.email_field :email, class: "form-control", placeholder: "Enter your email", required: true %>
      </div>

      <div class="mb-3">
        <%= f.label :subject, "Subject", class: "form-label fw-semibold" %>
        <%= f.text_field :subject, class: "form-control", placeholder: "Enter the subject", required: true %>
      </div>

      <div class="mb-3">
        <%= f.label :message, "Message", class: "form-label fw-semibold" %>
        <%= f.text_area :message, class: "form-control", rows: 5, placeholder: "Write your message here...", required: true %>
      </div>

      <div class="text-center">
        <%= f.submit "Send Message", class: "btn btn-primary btn-lg shadow rounded-pill px-4 py-2" %>
      </div>

    <% end %>
  </div>

  <!-- Contact Info Section -->
  <div class="row text-center mb-5">
    <div class="col-md-4 mb-3">
      <div class="card shadow-sm rounded-3 p-3 h-100">
        <i class="bi bi-geo-alt-fill fs-3 text-primary mb-2"></i>
        <h5 class="fw-semibold">Address</h5>
        <p class="mb-0">123 Main Street, City, Country</p>
      </div>
    </div>

    <div class="col-md-4 mb-3">
      <div class="card shadow-sm rounded-3 p-3 h-100">
        <i class="bi bi-envelope-fill fs-3 text-primary mb-2"></i>
        <h5 class="fw-semibold">Email</h5>
        <p class="mb-0">support@example.com</p>
      </div>
    </div>

    <div class="col-md-4 mb-3">
      <div class="card shadow-sm rounded-3 p-3 h-100">
        <i class="bi bi-telephone-fill fs-3 text-primary mb-2"></i>
        <h5 class="fw-semibold">Phone</h5>
        <p class="mb-0">+1 (123) 456-7890</p>
      </div>
    </div>
  </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
