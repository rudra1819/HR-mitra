<div class="container mt-5">
  <div class="col-lg-8 offset-lg-2">
    <div class="card rounded-0 shadow-sm mb-4">
      <div class="card-body">
        <h2 class="text-center text-secondary mb-4">Create New Employee</h2>

        <%= form_with model: @employee, local: true do |f| %>
          <% if @employee.errors.any? %>
            <div class="alert alert-danger">
              <h4>Please fix the following errors:</h4>
              <ul>
                <% @employee.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3">
            <%= f.label :first_name %>
            <%= f.text_field :first_name, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.label :middle_name %>
            <%= f.text_field :middle_name, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.label :last_name %>
            <%= f.text_field :last_name, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.label :personal_email, "Email" %>
            <%= f.email_field :personal_email, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.label :city %>
            <%= f.text_field :city, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.label :state %>
            <%= f.text_field :state, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.label :country %>
            <%= f.text_field :country, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.label :address_line_1, "Address Line 1" %>
            <%= f.text_field :address_line_1, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.label :address_line_2, "Address Line 2" %>
            <%= f.text_field :address_line_2, class: "form-control" %>
          </div>

          <div class="text-center mt-4">
            <%= f.submit "Create Employee", class: "btn btn-success border-0 rounded-pill shadow p-2 px-4" %>
            <%= link_to "Back to Employees", employees_path, class: "btn btn-secondary border-0 rounded-pill shadow p-2 px-4 ms-2" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
