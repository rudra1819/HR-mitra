<div class="container mt-5">
  <div class="card shadow-lg p-4 rounded">
    <h1 class="text-center text-primary mb-4">Edit Employee</h1>

    <!-- Error Messages -->
    <% if @employee.errors.any? %>
      <div class="alert alert-danger">
        <h5 class="text-danger">Fix the following errors:</h5>
        <ul>
          <% @employee.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_for(@employee) do |f| %>
      <div class="row">
        <!-- Left Column -->
        <div class="col-md-6">
          <div class="form-group mb-3">
            <%= f.label :first_name, class: "form-label" %>
            <%= f.text_field :first_name, class: 'form-control', required: true %>
          </div>

          <div class="form-group mb-3">
            <%= f.label :middle_name, class: "form-label" %>
            <%= f.text_field :middle_name, class: 'form-control' %>
          </div>

          <div class="form-group mb-3">
            <%= f.label :last_name, class: "form-label" %>
            <%= f.text_field :last_name, class: 'form-control', required: true %>
          </div>

          <div class="form-group mb-3">
            <%= f.label :personal_email, class: "form-label" %>
            <%= f.email_field :personal_email, class: 'form-control', required: true %>
          </div>

          <div class="form-group mb-3">
            <%= f.label :city, class: "form-label" %>
            <%= f.text_field :city, class: 'form-control' %>
          </div>
        </div>

        <!-- Right Column -->
        <div class="col-md-6">
          <div class="form-group mb-3">
            <%= f.label :state, class: "form-label" %>
            <%= f.text_field :state, class: 'form-control' %>
          </div>

          <div class="form-group mb-3">
            <%= f.label :country, class: "form-label" %>
            <%= f.text_field :country, class: 'form-control', required: true %>
          </div>

          <div class="form-group mb-3">
            <%= f.label :address_line_1, class: "form-label" %>
            <%= f.text_field :address_line_1, class: 'form-control', required: true %>
          </div>

          <div class="form-group mb-3">
            <%= f.label :address_line_2, class: "form-label" %>
            <%= f.text_field :address_line_2, class: 'form-control' %>
          </div>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="d-flex justify-content-center gap-3 mt-4">
        <%= f.submit 'Update Employee', class: 'btn btn-primary' %>
        <%= link_to 'Back', employee_path(@employee), class: 'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
</div>
