<div class="container mt-5">
  <div class="col-lg-12">
    <div class="card rounded-0 shadow-sm mb-4">
      <div class="card-body d-flex justify-content-between align-items-center">
        <h2 class="text-center text-secondary flex-grow-1">Listing Employees</h2>
        <% if user_signed_in? %>
          <%= button_to "logout", destroy_user_session_path, method: :delete, class: 'btn btn-danger'  %>
        <% else %>
          <%= link_to 'Sign In', new_user_session_path, class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>

    <%= render "shared/links" %>

    <div class="table-responsive">
      <table class="table table-bordered table-striped table-hover">
        <thead class="table-dark">
          <tr>
            <th>Sr-ID</th>
            <th>First Name</th>
            <th>Middle Name</th>
            <th>Last Name</th>
            <th>Personal Email</th>
            <th>City</th>
            <th>State</th>
            <th>Country</th>
            <th>Address Line 1</th>
            <th>Address Line 2</th>
            <th>Documents Count</th>
            <th>Action</th>
          </tr>
        </thead>

        <tbody>
          <% @employees.each do |employee| %>
            <tr>
              <td><%= employee.id %></td>
              <td><%= employee.first_name %></td>
              <td><%= employee.middle_name %></td>
              <td><%= employee.last_name %></td>
              <td><%= employee.personal_email %></td>
              <td><%= employee.city %></td>
              <td><%= employee.state %></td>
              <td><%= employee.country %></td>
              <td><%= employee.address_line_1 %></td>
              <td><%= employee.address_line_2 %></td>
              <td><%= employee.documents.count %></td>
              
              <td>
                <div class="btn-group">
                  <button type="button" class="btn btn-danger dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                    Action
                  </button>
                  <ul class="dropdown-menu">
                    <li><%= link_to "Edit Employee", edit_employee_path(employee), class: "dropdown-item" %></li>
                    <li><%= link_to "View Employee", employee_path(employee), class: "dropdown-item" %></li>
                    <li>
                      <%= button_to 'Delete', employee_path(employee), method: :delete, data: { confirm: "Are you sure you want to delete this employee?" }, class: "dropdown-item text-danger" %>
                    </li>
                  </ul>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="text-center mt-4">
      <%= button_to "New Employee", new_employee_path, method: :get, class: "btn btn-success border-0 rounded-pill shadow p-2 px-4" %>
    </div>
  </div>
</div>
