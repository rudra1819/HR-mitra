<div class="container mt-5">
  <div class="col-lg-12">

    <!-- Header Card -->
    <div class="card rounded-3 shadow-sm mb-4 border-0">
      <div class="card-body d-flex justify-content-between align-items-center flex-wrap">
        <h2 class="text-center text-secondary flex-grow-1 fw-bold mb-0">
          ðŸ‘¥ Employee Directory
        </h2>

        <% if user_signed_in? %>
          <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-outline-danger ms-3" %>
        <% else %>
          <%= link_to "Sign In", new_user_session_path, class: "btn btn-outline-primary ms-3" %>
        <% end %>
      </div>
    </div>

    <!-- Optional Shared Links -->
    <%= render "shared/links" %>

    <!-- Search Bar -->
    <div class="mb-3">
      <input 
        type="text" 
        id="employeeSearch" 
        class="form-control shadow-sm" 
        placeholder="ðŸ” Search employees by name, email, or city..." 
        onkeyup="filterTable()"
      >
    </div>

    <!-- Employee Table (No Scroll) -->
    <div class="shadow-sm rounded-3">
      <table class="table table-bordered table-hover align-middle" id="employeeTable">
        <thead class="table-dark sticky-top">
          <tr>
            <th>Sr-ID</th>
            <th>First Name</th>
            <th>Middle Name</th>
            <th>Last Name</th>
            <th>Personal Email</th>
            <th>City</th>
            <th>State</th>
            <th>Country</th>
            <th>Address Line 1</th>
            <th>Address Line 2</th>
            <th>Docs</th>
            <th>Action</th>
          </tr>
        </thead>

        <tbody>
          <% @employees.each do |employee| %>
            <tr>
              <td><%= employee.id %></td>
              <td><%= employee.first_name %></td>
              <td><%= employee.middle_name %></td>
              <td><%= employee.last_name %></td>
              <td><%= employee.personal_email %></td>
              <td><%= employee.city %></td>
              <td><%= employee.state %></td>
              <td><%= employee.country %></td>
              <td><%= employee.address_line_1 %></td>
              <td><%= employee.address_line_2 %></td>
              <td><span class="badge bg-info text-dark"><%= employee.documents.count %></span></td>

              <td>
                <div class="btn-group">
                  <button 
                    type="button" 
                    class="btn btn-sm btn-outline-secondary dropdown-toggle" 
                    data-bs-toggle="dropdown" 
                    aria-expanded="false">
                    <i class="bi bi-gear"></i> Action
                  </button>
                  <ul class="dropdown-menu shadow-sm">
                    <li>
                      <%= link_to edit_employee_path(employee), class: "dropdown-item" do %>
                        <i class="bi bi-pencil-square text-primary"></i> Edit
                      <% end %>
                    </li>
                    <li>
                      <%= link_to employee_path(employee), class: "dropdown-item" do %>
                        <i class="bi bi-eye text-success"></i> View
                      <% end %>
                    </li>
                    <li>
                      <%= button_to employee_path(employee), 
                          method: :delete, 
                          data: { confirm: "Are you sure you want to delete this employee?" }, 
                          class: "dropdown-item text-danger" do %>
                        <i class="bi bi-trash"></i> Delete
                      <% end %>
                    </li>
                  </ul>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- Add New Employee Button -->
    <div class="text-center mt-4">
      <%= button_to "âž• Add New Employee", new_employee_path, method: :get, class: "btn btn-success border-0 rounded-pill shadow px-4 py-2" %>
    </div>

  </div>
</div>

<!-- Search Filter Script -->
<script>
  function filterTable() {
    const input = document.getElementById("employeeSearch");
    const filter = input.value.toLowerCase();
    const rows = document.querySelectorAll("#employeeTable tbody tr");

    rows.forEach(row => {
      const text = row.textContent.toLowerCase();
      row.style.display = text.includes(filter) ? "" : "none";
    });
  }
</script>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
